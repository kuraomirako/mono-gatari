<%= render "shared/header" %>
<div class='member-main'>
<%= form_with model: @user, url: user_registration_path, local: true do |f| %>

  <div class='form-main'>
    <h1 class='form-title'>会員登録ページ</h1>

    <%= render 'shared/error_messages', model: f.object %>

    <div class='form-text-wrap'>
      <label class="form-name">ニックネーム</label>
      <%= f.text_field :nickname, class:"input-default", id:"nickname", maxlength:"15" %>
    </div>

    <div class='form-text-wrap'>
      <label class="form-name">メールアドレス</label>
      <%= f.email_field :email, class:"input-default", id:"email" %>
    </div>

     <div class='form-text-wrap'>
      <label class="form-name">パスワード</label>
      <p class="indispensable">（半角英数字を両方を含めて、6文字以上で設定してください）</p>
      <%= f.password_field :password, class:"input-default", id:"password", minlength:"6" %>
    </div>
    <div class='form-text-wrap'>
      <label class="form-name">お名前（全角）</label>
      <div class='input-name-wrap'>
        <%= f.text_field :last_name, class:"input-default-half", id:"last_name", placeholder:"例) 山田" %>
        <%= f.text_field :first_name, class:"input-default-half", id:"first-name", placeholder:"例) 花子" %>
      </div>
    </div>

    <div class='form-text-wrap'>
      <label class="form-name">生年月日</label>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
        f.date_select(
          :birthday,
          {
            use_month_numbers: true,
            prompt: '--',
            start_year: 1905,
            end_year: Time.now.year - 2,
            date_separator: '%s'
          },
          {
            class: 'select-birth',
            id: 'birth-date'
          }
        ),
        "<p> 年　</p>", "<p> 月　</p>") + "<p> 日　</p>" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "モノ語りの世界へ入る", class: "new-user-btn" %>
    </div>
  </div>

<% end %>
</div>