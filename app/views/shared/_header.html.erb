    <% else %>
      <%= link_to 'log<br>i n'.html_safe, new_user_session_path, class: "log-situation1" %>
      <%= link_to ' 会 員 <br> 登 録 '.html_safe, new_user_registration_path, class: "log-situation0" %>
    <% end %>
    <div class="header-menu">
      <span class="menu-icon">≡</span>
      <ul class="menu-lists" style="display: none;">
          <li class="menu-list"><%= link_to '積読', user_signed_in? ? bookmarks_user_path(current_user) : root_path %></li>
          <li class="menu-list"><%= link_to 'フォロー', user_signed_in? ? follow_user_path(current_user) : root_path %></li>
          <li class="menu-list"><%= link_to 'マイページ', user_signed_in? ? user_path(current_user) : root_path %></li>
          <li class="menu-list"><%= link_to 'トップページへ戻る', root_path, class: "return-top-page" %></li>
      </ul>
    </div>
  </div>
</header>